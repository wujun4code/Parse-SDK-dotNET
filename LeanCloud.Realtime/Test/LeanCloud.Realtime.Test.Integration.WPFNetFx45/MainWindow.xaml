<Window x:Class="LeanCloud.Realtime.Test.Integration.WPFNetFx45.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LeanCloud.Realtime.Test.Integration.WPFNetFx45"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="LeanCloud"
        DataContext="{Binding Main,Source={StaticResource Locator}}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <sys:String x:Key="appName">Realtime Tutorial</sys:String>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel Name="dcPanel">
        
        <ContentControl Name="TopRect" DockPanel.Dock="Top" Background="LightGreen"
            Height="50" Content="Top"/>
        <ContentControl Name="LeftRect" DockPanel.Dock="Left" Background="LightBlue"
            Width="Auto" Content="{Binding LeftContent}" Height="Auto"/>
        <ContentControl Name="RightRect" DockPanel.Dock="Right" Background="LightSalmon"
            Width="50" Content="Right" Height="Auto"/>
        <ContentControl Name="BottomRect" DockPanel.Dock="Bottom" Background="LightCyan"
                        Content="Bottom" Height="50"/>
        <ContentControl Name="Fill" Height="Auto" Margin="0,5" Content="{Binding CenterContent}" />
    </DockPanel>
</Window>
