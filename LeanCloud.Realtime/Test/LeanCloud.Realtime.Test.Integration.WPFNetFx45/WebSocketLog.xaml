<UserControl x:Class="LeanCloud.Realtime.Test.Integration.WPFNetFx45.WebSocketLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeanCloud.Realtime.Test.Integration.WPFNetFx45"
             mc:Ignorable="d" 
              DataContext="{Binding Log,Source={StaticResource Locator}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="16">
        <ScrollViewer>
            <TextBox TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"
                   Text="{Binding Log,Mode=TwoWay}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
